{
    "printWidth": 180,
    "semi": true,
    "tabWidth": 4,
    "useTabs": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "htmlWhitespaceSensitivity": "ignore",
    "arrowParens": "avoid",
    "overrides": [
        {
            "files": [
                "*.json",
                ".eslintrc",
                ".tslintrc",
                ".prettierrc",
                ".tern-project"
            ],
            "options": {
                "parser": "json",
                "tabWidth": 4
            }
        },
        {
            "files": "*.{css,sass,scss,less}",
            "options": {
                "parser": "scss",
                "tabWidth": 4
            }
        },
        {
            "files": "*.vue",
            "options": {
                "parser": "vue",
                "tabWidth": 4
            }
        },
        {
            "files": "*.ts",
            "options": {
                "parser": "typescript",
                "tabWidth": 4
            }
        },
        {
            "files": "*.tsx",
            "options": {
                "parser": "typescript"
            }
        }
    ]
}
